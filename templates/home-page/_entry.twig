{% block subcontent %}
		<div class="row dark">
			<div class="ContactUs">
                {% set hero = entry.contactHero.one() %}
				<div class="ContactUs-info" style="background-image: url('{{ hero.url }}');"></div>
 				<div  id="contactus" class="ContactUs-contact">
					<div class="ContactUs-feature">
						<div>
							<span class="ContactUs-logo">
                                {% set logo = entry.simpleLogo.one() %}
								<img src="{{ logo.getUrl() }}" alt="{{ logo.altText }}"/>
							</span>

                            {% for contact in entry.contactInfo %}                   
                            <p>{{ contact.addressOne }}, {{ contact.city }}, {{ contact.state }} {{ contact.postalCode }}</p>
                            <p>Phone: {{ contact.phone }}</p>
                            <p>Fax: {{ contact.fax }}</p>
                            <p>email:
                                <a href="mailto:{{ contact.email }}?subject={{ contact.emailSubject }}">{{ contact.email }}</a>
                            </p>

							<p>&nbsp;</p>
                            <span class="button">
							    <a href="mailto:{{ contact.email }}?subject={{ contact.emailSubject }}">{{ contact.button }}</a>
                            </span>
                            {% endfor %}
						</div>
					</div>
				</div>
			</div>
		</div>


{% endblock %}

