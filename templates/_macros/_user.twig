            {{ redirectInput(landing) }}
            {{ csrfInput() }}
            <div class="">
                <label for="">Email</label>
                <input class="" type="text" value="{{ cart.email }}"
                    name="email"
                    placeholder="myemail@site.com"/>
            </div>
            <input type="submit" value="Continue as Guest" class="button"/>
        </form>
    {% endif %}
{% endmacro guestCheckoutForm %}

